{
  "compilerOptions": {
   
    /* Language and Environment */
    "target": "es2017",                                  
   
    /* Modules */
    "module": "commonjs",                               
   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                      
    
    "skipLibCheck": true,

    "allowJs": true,
   },
   "include": [
    "src/**/*.ts"
   ]
}
